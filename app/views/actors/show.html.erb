<div>
  <div>
    <h1>
      <%= @the_actor.name %>
    </h1>

    <div>
      <div>
        <a href="/actors">
          Go back
        </a>
      </div>

      <div>
        <a href="/delete_actor/<%= @the_actor.id %>">
          Delete actor
        </a>
      </div>
    </div>

    <hr>

    <dl>
      <dt>
        Name
      </dt>
      <dd>
        <%= @the_actor.name %>
      </dd>

      <dt>
        Dob
      </dt>
      <dd>
        <%= @the_actor.dob %>
      </dd>

      <dt>
        Bio
      </dt>
      <dd>
        <%= @the_actor.bio %>
      </dd>

      <dt>
        Image
      </dt>
      <dd>
        <img src="<%= @the_actor.image %>">
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_actor.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_actor.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

<hr>

<h2>Filmography</h2>

<table border="1">
  <tr>
    <th>Title</th>
    <th>Year</th>
    <th>Director</th>
    <th>Character</th>
    <th> </th>
  </tr>

  <% @the_actor.filmography.each do |movie| %>
    <tr>
      <td>
        <%= movie.title %>
      </td>

      <td>
        <%= movie.year %>
      </td>

      <td>
        <%= movie.director.name %>
      </td>

      <td>
        <%= movie %>
      </td>

      <td>
        <a href="/movies/<%= movie.id %>">
          Show details
        </a>
      </td>
    </tr>
  <% end %>
</table>

<div>
  <div>
    <h2>
      Edit actor
    </h2>

    <form action="/modify_actor/<%= @the_actor.id %>"  method="post" >
      <div>
        <label for="name_box">
          Name
        </label>

        <input type="text" id="name_box" name="query_name" value="<%= @the_actor.name %>">
      </div>

      <div>
        <label for="dob_box">
          Dob
        </label>

        <input type="date" id="dob_box" name="query_dob" value="<%= @the_actor.dob %>">
      </div>

      <div>
        <label for="bio_box">
          Bio
        </label>

        <textarea id="bio_box" name="query_bio"><%= @the_actor.bio %></textarea>
      </div>

      <div>
        <label for="image_box">
          Image
        </label>

        <input type="text" id="image_box" name="query_image" value="<%= @the_actor.image %>">
      </div>

      <button>
        Update actor
      </button>
    </form>
  </div>
</div>

<hr>
